@import url("https://s3-us-west-1.amazonaws.com/patterns.esri.com/files/calcite-web/1.0.0-rc.3/css/calcite-web.min.css")
@import url("//fonts.googleapis.com/css?family=Maven+Pro")

.sub-nav  {
	background-color: #9BC19C;
}

.page-banner {
	margin-bottom: auto
}

.rtaa_logo {
	height: 60px;
	width: 120px;
}

#homepage-banner {
	width: 100%;
  background-image: url("../../app/img/header_banner_resize.png")
  background-size: cover
	display: flex;
	flex-direction: row;
	justify-content: center
}

#homepage-banner .column-24 {
  display: flex;
  flex-direction: row;
  align-content: center;
  justify-content: center;
}

.card {
	outline: 1px solid #F8F8F8;
}

.card .card-image {
  display: flex;
  flex-direction: row;
  justify-content: center;
}



